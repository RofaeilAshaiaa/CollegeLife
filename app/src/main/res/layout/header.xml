<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navigation_menu_header_background"
    android:fitsSystemWindows="true"
    android:onClick="myProfileLayoutPressed">

    <TextView
        android:id="@+id/student_my_profile_header_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/navigation_menu_header_name_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/student_my_profile_header_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/old_id_logo_background"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <ProgressBar
        android:id="@+id/navigation_menu_header_earned_hours_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/student_my_profile_header_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/student_head_logo_progress_bar_circle_shape_background"
        android:indeterminate="false"
        android:max="140"
        android:progress="0"
        android:progressDrawable="@drawable/student_head_logo_progress_bar_circular_color" />

    <ProgressBar
        android:id="@+id/navigation_menu_header_cgpa_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_below="@+id/student_my_profile_header_name_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/student_head_logo_progress_bar_circle_shape_background"
        android:indeterminate="false"
        android:max="4"
        android:progress="0"
        android:progressDrawable="@drawable/student_head_logo_progress_bar_circular_color" />

    <TextView
        android:id="@+id/navigation_menu_header_level_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_my_profile_header_name_text"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/navigation_menu_header_cgpa_progress_bar"
        android:layout_toRightOf="@+id/navigation_menu_header_cgpa_progress_bar"
        android:background="@drawable/student_head_level_background"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:fitsSystemWindows="true"--><!--android:onClick="myProfileLayoutPressed"--><!--android:orientation="horizontal">-->


