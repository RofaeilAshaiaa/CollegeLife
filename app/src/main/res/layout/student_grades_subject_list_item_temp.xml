<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_grades_subject_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/student_grades_subject_old_id_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/old_id_logo_background"
            android:gravity="center"
            android:text="ر150"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_subject_old_id_logo"
            android:layout_toStartOf="@+id/student_grades_subject_old_id_logo"
            android:text="وسائط متعددة والوصول للمعلومات"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/student_grades_subject_hours_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/student_grades_subject_name"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/student_grades_subject_point_text_logo"
            android:layout_toRightOf="@+id/student_grades_subject_point_text_logo"
            android:background="@drawable/ic_logo_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hours_white_36dp" />

        <TextView
            android:id="@+id/student_grades_subject_hours_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_grades_subject_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_subject_hours_logo"
            android:layout_toStartOf="@+id/student_grades_subject_hours_logo"
            android:text="3"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/student_grades_subject_point_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/student_grades_subject_hours_logo"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_subject_old_id_logo"
            android:layout_toStartOf="@+id/student_grades_subject_old_id_logo"
            android:background="@drawable/ic_logo_background_right_corner"
            android:src="@drawable/ic_points_white_36dp" />

        <TextView
            android:id="@+id/student_grades_subject_point_text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_grades_subject_hours_logo"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_subject_point_logo"
            android:layout_toStartOf="@+id/student_grades_subject_point_logo"
            android:background="@drawable/text_logo_background_left_corner"
            android:text="Pionts"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_subject_point_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_grades_subject_hours_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/student_grades_subject_point_text_logo"
            android:layout_toStartOf="@+id/student_grades_subject_point_text_logo"
            android:text="12.5"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/student_grades_subject_grade"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_below="@+id/student_grades_subject_name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/text_logo_background"
            android:gravity="center"
            android:text="A+"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>