<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/student_grades_semester_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/student_grades_semester_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/old_id_logo_background"
            android:gravity="center"
            android:padding="8dp"
            android:src="@drawable/ic_semester_white_36dp" />

        <TextView
            android:id="@+id/student_grades_semester_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/student_grades_semester_logo"
            android:layout_toStartOf="@+id/student_grades_semester_logo"
            android:text="خريف 2016"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/student_grades_semester_subjects_icon_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/student_grades_semester_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_semester_logo"
            android:layout_toStartOf="@+id/student_grades_semester_logo"
            android:background="@drawable/ic_logo_background_right_corner"
            android:src="@drawable/subjects_logo"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_semester_subjects_num_text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_grades_semester_name"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_semester_subjects_icon_logo"
            android:layout_toStartOf="@+id/student_grades_semester_subjects_icon_logo"
            android:background="@drawable/text_logo_background_left_corner"
            android:text="المواد"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/student_grades_semester_subjects_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_grades_semester_name"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/student_grades_semester_subjects_num_text_logo"
            android:layout_toStartOf="@+id/student_grades_semester_subjects_num_text_logo"
            android:text="10"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/student_grades_semester_cgpa_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_subjects_icon_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/student_grades_semester_logo"
            android:layout_toStartOf="@id/student_grades_semester_logo"
            android:background="@drawable/text_logo_background"
            android:text="CGPA"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_semester_cgpa_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_subjects_icon_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/student_grades_semester_cgpa_logo"
            android:layout_toStartOf="@id/student_grades_semester_cgpa_logo"
            android:text="13"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/student_grades_semester_gpa_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/student_grades_semester_cgpa_logo"
            android:layout_below="@id/student_grades_semester_subjects_icon_logo"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/student_grades_semester_cgpa_num"
            android:layout_toStartOf="@id/student_grades_semester_cgpa_num"
            android:background="@drawable/text_logo_background"
            android:text="GPA"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_semester_gpa_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_subjects_icon_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/student_grades_semester_gpa_logo"
            android:layout_toStartOf="@id/student_grades_semester_gpa_logo"
            android:text="10"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/student_grades_semester_loaded_hours_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_cgpa_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/student_grades_semester_logo"
            android:layout_toStartOf="@id/student_grades_semester_logo"
            android:background="@drawable/text_logo_background"
            android:text="العبءالدراسي"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_semester_loaded_hours_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_cgpa_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/student_grades_semester_loaded_hours_logo"
            android:layout_toStartOf="@id/student_grades_semester_loaded_hours_logo"
            android:text="40"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/student_grades_semester_earned_hours_icon_logo"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@+id/student_grades_semester_gpa_logo"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/student_grades_semester_loaded_hours_num"
            android:layout_toStartOf="@+id/student_grades_semester_loaded_hours_num"
            android:background="@drawable/ic_logo_background_right_corner"
            android:src="@drawable/ic_hours_white_36dp" />

        <TextView
            android:id="@+id/student_grades_semester_earned_hours_text_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_cgpa_logo"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/student_grades_semester_earned_hours_icon_logo"
            android:layout_toStartOf="@id/student_grades_semester_earned_hours_icon_logo"
            android:background="@drawable/text_logo_background_left_corner"
            android:text="المكتسبه"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_grades_semester_earned_hours_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_grades_semester_cgpa_logo"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/student_grades_semester_earned_hours_text_logo"
            android:layout_toStartOf="@id/student_grades_semester_earned_hours_text_logo"
            android:text="63"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>