<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end">

    <TextView
        android:id="@+id/review_registered_subject_old_id_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/old_id_logo_background"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ر150" />

    <TextView
        android:id="@+id/review_registered_subject_name"
        style="@style/text_view_offline_message"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/review_registered_subject_old_id_logo"
        android:layout_toStartOf="@+id/review_registered_subject_old_id_logo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/review_registered_subject_old_id_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="وسائط متعددة " />

    <ImageView
        android:id="@+id/review_registered_subject_hours_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/review_registered_subject_name"
        android:layout_alignRight="@+id/review_registered_subject_name"
        android:layout_below="@+id/review_registered_subject_name"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/review_registered_subject_old_id_logo"
        android:layout_toStartOf="@+id/review_registered_subject_old_id_logo"
        android:background="@drawable/ic_logo_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_hours_white_36dp"
        app:layout_constraintRight_toLeftOf="@+id/review_registered_subject_old_id_logo"
        app:layout_constraintTop_toBottomOf="@+id/review_registered_subject_name" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_logo_background"
        android:scaleType="centerCrop"
        android:src="@drawable/description_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/review_registered_subject_old_id_logo"
        app:layout_constraintTop_toBottomOf="@+id/review_registered_subject_hours_logo" />

    <TextView
        android:id="@+id/review_registered_subject_hours_num"
        style="@style/tv_numbers_in_review_registered_subjects"
        android:layout_below="@+id/review_registered_subject_name"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/review_registered_subject_hours_logo"
        android:layout_toStartOf="@+id/review_registered_subject_hours_logo"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/review_registered_subject_hours_logo"
        app:layout_constraintRight_toLeftOf="@+id/review_registered_subject_hours_logo"
        app:layout_constraintTop_toTopOf="@+id/review_registered_subject_hours_logo"
        tools:text="3" />

    <TextView
        android:id="@+id/subject_type_review_regsitered_subjects"
        style="@style/tv_numbers_in_review_registered_subjects"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        tools:text="Name" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/subject_item_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
