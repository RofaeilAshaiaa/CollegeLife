<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    card:cardCornerRadius="1dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/review_registered_subject_old_id_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/old_id_logo_background"
            android:gravity="center"
            tools:text="ر150"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            card:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginRight="9dp"
            card:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/review_registered_subject_name"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/review_registered_subject_old_id_logo"
            android:layout_toStartOf="@+id/review_registered_subject_old_id_logo"
            tools:text="وسائط متعددة "
            style="@style/text_view_offline_message"
            android:textStyle="bold"
            card:layout_constraintRight_toLeftOf="@+id/review_registered_subject_old_id_logo"
            android:layout_marginRight="16dp"
            card:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/review_registered_subject_hours_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/review_registered_subject_name"
            android:layout_alignRight="@+id/review_registered_subject_name"
            android:layout_below="@+id/review_registered_subject_name"
            android:layout_toLeftOf="@+id/review_registered_subject_old_id_logo"
            android:layout_toStartOf="@+id/review_registered_subject_old_id_logo"
            android:background="@drawable/ic_logo_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hours_white_36dp"
            android:layout_marginRight="0dp"
            card:layout_constraintRight_toRightOf="@+id/review_registered_subject_name"
            android:layout_marginTop="16dp"
            card:layout_constraintTop_toBottomOf="@+id/review_registered_subject_name" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            card:layout_constraintRight_toRightOf="@+id/review_registered_subject_hours_logo"
            card:layout_constraintTop_toBottomOf="@+id/review_registered_subject_hours_logo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_description_black_24dp"
            card:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            card:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/review_registered_subject_hours_num"
            android:layout_below="@+id/review_registered_subject_name"
            android:layout_toLeftOf="@+id/review_registered_subject_hours_logo"
            android:layout_toStartOf="@+id/review_registered_subject_hours_logo"
            tools:text="3"
            style="@style/tv_numbers_in_review_registered_subjects"
            android:textStyle="normal"
            card:layout_constraintRight_toLeftOf="@+id/review_registered_subject_hours_logo"
            android:layout_marginRight="24dp"
            card:layout_constraintTop_toTopOf="@+id/review_registered_subject_hours_logo"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/subject_type_review_regsitered_subjects"
            style="@style/tv_numbers_in_review_registered_subjects"
            tools:text="Name"
            card:layout_constraintRight_toLeftOf="@+id/imageView3"
            android:layout_marginRight="24dp"
            android:layout_marginTop="0dp"
            card:layout_constraintTop_toTopOf="@+id/imageView3" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>