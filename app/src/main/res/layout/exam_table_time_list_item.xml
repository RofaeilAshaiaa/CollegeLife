<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="3dp"
    card:cardCornerRadius="1dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exam_table_subject_old_id_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/old_id_logo_background"
            android:gravity="center"
            tools:text="ر150"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            card:layout_constraintRight_toRightOf="parent"
            card:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/exam_table_subject_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="وسائط متعددة والوصول للمعلومات"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            card:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            card:layout_constraintLeft_toLeftOf="parent"
            card:layout_constraintRight_toLeftOf="@+id/exam_table_subject_old_id_logo"
            android:layout_marginRight="8dp"
            card:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/exam_table_subject_date_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_logo_background"
            android:src="@drawable/ic_date_white_36dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            card:layout_constraintTop_toBottomOf="@+id/exam_table_subject_hours_logo"
            card:layout_constraintRight_toRightOf="@+id/exam_table_subject_hours_logo"
            card:layout_constraintBottom_toBottomOf="@+id/exam_table_subject_old_id_logo"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/exam_table_subject_date_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="السبت, 21يناير, 2017"
            android:textSize="20sp"
            android:textStyle="normal"
            card:layout_constraintRight_toLeftOf="@+id/exam_table_subject_date_logo"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            card:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            card:layout_constraintTop_toBottomOf="@+id/exam_table_subject_hours_num"
            card:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/exam_table_subject_hours_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_logo_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_hours_white_36dp"
            card:layout_constraintRight_toLeftOf="@+id/exam_table_subject_old_id_logo"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            card:layout_constraintTop_toBottomOf="@+id/exam_table_subject_name" />

        <TextView
            android:id="@+id/exam_table_subject_hours_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3"
            android:textSize="20sp"
            android:textStyle="normal"
            card:layout_constraintRight_toLeftOf="@+id/exam_table_subject_hours_logo"
            android:layout_marginRight="8dp"
            card:layout_constraintTop_toTopOf="@+id/exam_table_subject_hours_logo"
            android:layout_marginTop="0dp" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>