<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:background="@drawable/old_id_logo_background"
        android:gravity="center"
        android:id="@+id/exam_table_subject_old_id_logo"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="70dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ر150" />

    <TextView
        android:id="@+id/exam_table_subject_name"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/exam_table_subject_old_id_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="وسائط متعددة والوصول للمعلومات" />

    <ImageView
        android:background="@drawable/ic_logo_background"
        android:id="@+id/exam_table_subject_date_logo"
        android:layout_height="25dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="25dp"
        android:src="@drawable/ic_date_white_36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/exam_table_subject_old_id_logo"
        app:layout_constraintTop_toBottomOf="@+id/exam_table_subject_hours_logo" />

    <TextView
        android:id="@+id/exam_table_subject_date_val"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/exam_table_subject_date_logo"
        app:layout_constraintRight_toLeftOf="@+id/exam_table_subject_date_logo"
        app:layout_constraintTop_toTopOf="@+id/exam_table_subject_date_logo"
        app:layout_constraintVertical_bias="1.0"
        tools:text="السبت, 21يناير, 2017" />


    <ImageView
        android:background="@drawable/ic_logo_background"
        android:id="@+id/exam_table_subject_hours_logo"
        android:layout_height="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_hours_white_36dp"
        app:layout_constraintRight_toLeftOf="@+id/exam_table_subject_old_id_logo"
        app:layout_constraintTop_toBottomOf="@+id/exam_table_subject_name" />

    <TextView
        android:id="@+id/exam_table_subject_hours_num"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/exam_table_subject_hours_logo"
        app:layout_constraintRight_toLeftOf="@+id/exam_table_subject_hours_logo"
        app:layout_constraintTop_toTopOf="@+id/exam_table_subject_hours_logo"
        tools:text="3" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/subject_item_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exam_table_subject_date_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>